	private static void m1() {
		// 숫자를 1개 입력받아 한글로 출력하시오.
		//1 > "하나"
		//2 > "둘"
		int num = 1;
		
		if(num==1) {
			System.out.println("하나");
		}else if(num==2) {
			System.out.println("둘");
		}else if(num==3) {
			System.out.println("셋");
		}
		
		switch(num) {
		case 1:
			System.out.println("하나");
			break;
		default:
			System.out.println("0");
		}
		
	}
